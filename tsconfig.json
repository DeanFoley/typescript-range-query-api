{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2017",                                 
    "lib": ["esnext"],                                  
    
    /* Modules */
    "module": "commonjs",                               
    "rootDir": "src",                                   
    "moduleResolution": "node",                         
    "resolveJsonModule": true,                          

    /* Emit */
    "sourceMap": true,                                  
    "outDir": "dist",                                   

    /* Interop Constraints */
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           

    /* Type Checking */
    "strict": true,                                     
    "noImplicitAny": true,                              

    /* Completeness */
    "skipLibCheck": true                                
  }
}
